<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <ImageView
            android:layout_width="370dp"
            android:layout_height="45dp" app:srcCompat="@drawable/cygnaturelogo"
            android:id="@+id/imageView2"
            android:contentDescription="@string/img_description"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"/>
    <TextView
            android:text="@string/reset"
            android:layout_width="227dp"
            android:layout_height="39dp"
            android:id="@+id/textView3"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:textColor="@color/design_default_color_on_secondary"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintHorizontal_bias="0.446" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/editText4"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:inputType="textPersonName"
            android:hint="@string/OTP"
            android:paddingStart="@dimen/dp10"
            android:paddingEnd="@dimen/dp10"
            android:background="@drawable/edit_round"
            android:ems="10"
            android:id="@+id/editText4"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/editText5"
            android:importantForAutofill="no" tools:targetApi="o" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:textColor="@color/design_default_color_on_primary"
            android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.517"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:inputType="textPersonName"
            android:hint="@string/enter_password"
            android:ems="10"
            android:paddingStart="@dimen/dp10"
            android:paddingEnd="@dimen/dp10"
            android:background="@drawable/edit_round"
            android:id="@+id/editText5"
            app:layout_constraintTop_toBottomOf="@+id/editText4"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/editText7"
            android:importantForAutofill="no" tools:targetApi="o" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:inputType="textPersonName"
            android:hint="@string/confirm_password"
            android:ems="10"
            android:paddingStart="@dimen/dp10"
            android:paddingEnd="@dimen/dp10"
            android:background="@drawable/edit_round"
            android:id="@+id/editText7"
            app:layout_constraintTop_toBottomOf="@+id/editText5"
            android:layout_marginBottom="48dp"
            app:layout_constraintBottom_toTopOf="@+id/button4"
            android:importantForAutofill="no" tools:targetApi="o" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:text="@string/reset"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/button4"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/editText7"
            android:layout_marginBottom="76dp"
            android:background="@drawable/edit_round2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp" android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>