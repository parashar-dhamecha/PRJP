<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout android:layout_height="match_parent"
                                           xmlns:android="http://schemas.android.com/apk/res/android"
                                           android:layout_width="match_parent"
                                           xmlns:app="http://schemas.android.com/apk/res-auto"
                                           android:fitsSystemWindows="true"
                                           android:id="@+id/drawerlayoutid">

    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
                 android:id="@+id/Frame_content"/>


    <com.google.android.material.navigation.NavigationView android:layout_width="wrap_content"
                                                           android:layout_height="match_parent"
                                                           android:layout_gravity="start"
                                                           android:id="@+id/navid"
                                                           app:headerLayout="@layout/navigationbar_header"
                                                           android:fitsSystemWindows="true" app:menu="@menu/nav_menu"
    />

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Dashboard">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_margin="@dimen/dp10"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                  android:id="@+id/linearLayout" app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                  app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                  android:layout_marginTop="@dimen/dp50" app:layout_constraintHorizontal_bias="1.0">
        <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
        >
            <RelativeLayout android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/cardbg"
                            android:layout_margin="@dimen/dp10">
                <TextView android:layout_width="@dimen/dp80"
                          android:layout_height="@dimen/dp80"
                          android:layout_marginRight="@dimen/dp50"
                          android:layout_marginLeft="@dimen/dp50"
                          android:layout_marginTop="@dimen/dp10"
                          android:id="@+id/cardTextView"
                          android:textSize="@dimen/sp50"
                          android:text="@string/awsdata"
                          android:textAlignment="center"
                          android:textColor="@color/textcolor3"
                />
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_below="@+id/cardTextView"
                          android:layout_centerHorizontal="true"
                          android:text="@string/completed"
                          android:layout_marginStart="@dimen/dp5"
                          android:textColor="@color/textcolor"
                          android:layout_marginTop="@dimen/dp5"
                          android:textSize="@dimen/sp20"
                          android:layout_marginEnd="@dimen/dp5" android:layout_marginBottom="@dimen/dp5"
                          android:id="@+id/AwatingSign"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
            <RelativeLayout android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/cardbg"
                            android:layout_margin="@dimen/dp10">
                <TextView android:layout_width="@dimen/dp80"
                          android:layout_height="@dimen/dp80"
                          android:layout_marginRight="@dimen/dp50"
                          android:layout_marginLeft="@dimen/dp50"
                          android:layout_marginTop="@dimen/dp10"
                          android:id="@+id/cardTextView2"
                          android:textSize="@dimen/sp50"
                          android:text="@string/awsdata"
                          android:textAlignment="center"
                          android:textColor="@color/textcolor3"
                />
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_below="@+id/cardTextView2"
                          android:layout_centerHorizontal="true"
                          android:text="@string/signingdue"
                          android:layout_marginStart="@dimen/dp5"
                          android:textColor="@color/textcolor"
                          android:layout_marginTop="@dimen/dp5"
                          android:textSize="@dimen/sp20"
                          android:layout_marginEnd="@dimen/dp5" android:layout_marginBottom="@dimen/dp5"
                          android:id="@+id/AwatingSign2"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_margin="@dimen/dp10"
                  android:layout_marginStart="@dimen/dp50"
                  android:layout_marginTop="8dp"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  android:id="@+id/linearLayout2"
    >
        <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/cardbg"
                            android:layout_margin="@dimen/dp10">
                <TextView android:layout_width="@dimen/dp80"
                          android:layout_height="@dimen/dp80"
                          android:layout_marginRight="@dimen/dp50"
                          android:layout_marginLeft="@dimen/dp50"
                          android:layout_marginTop="@dimen/dp10"
                          android:id="@+id/cardTextView21"
                          android:textSize="@dimen/sp50"
                          android:text="@string/awsdata"
                          android:textAlignment="center"
                          android:textColor="@color/textcolor3"
                />
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_below="@+id/cardTextView21"
                          android:layout_centerHorizontal="true"
                          android:textSize="@dimen/sp20"
                          android:text="@string/awatingsign"
                          android:layout_marginStart="@dimen/dp5"
                          android:layout_marginTop="@dimen/dp5"
                          android:layout_marginEnd="@dimen/dp5" android:layout_marginBottom="@dimen/dp5"
                          android:id="@+id/AwatingSign21"
                          android:textColor="@color/textcolor"
                />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/cardbg"
                            android:layout_margin="@dimen/dp10">
                <TextView android:layout_width="@dimen/dp80"
                          android:layout_height="@dimen/dp80"
                          android:layout_marginRight="@dimen/dp50"
                          android:layout_marginLeft="@dimen/dp50"
                          android:layout_marginTop="@dimen/dp10"
                          android:id="@+id/cardTextView22"
                          android:textSize="@dimen/sp50"
                          android:text="@string/awsdata"
                          android:textAlignment="center"
                          android:textColor="@color/textcolor3"
                />
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_below="@+id/cardTextView22"
                          android:layout_centerHorizontal="true"
                          android:text="@string/awatingothers"
                          android:layout_marginStart="@dimen/dp5"
                          android:textColor="@color/textcolor"
                          android:layout_marginTop="@dimen/dp5"
                          android:textSize="@dimen/sp20"
                          android:layout_marginEnd="@dimen/dp5" android:layout_marginBottom="@dimen/dp5"
                          android:id="@+id/AwatingSign22"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <Button
            android:text="@string/edit_your_signature"
            android:layout_margin="@dimen/dp30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:background="@color/digitbg"
            android:padding="@dimen/dp20"
            android:textSize="@dimen/sp20"
            android:id="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
    />
    <Button
            android:text="@string/addsign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_goneMarginTop="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp30"
            android:layout_marginRight="@dimen/dp30"
            android:textAllCaps="false"
            android:id="@+id/button2"
            android:background="@color/digitbg"
            android:padding="@dimen/dp20"
            android:textSize="@dimen/sp20"
            android:layout_marginTop="@dimen/dp10"
            app:layout_constraintTop_toBottomOf="@+id/button"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton android:layout_width="67dp"
                                                                           android:layout_height="46dp"
                                                                           android:layout_gravity="end|bottom"
                                                                           android:layout_marginTop="8dp"
                                                                           app:layout_constraintTop_toBottomOf="@+id/button2"
                                                                           android:layout_marginBottom="8dp"
                                                                           app:layout_constraintBottom_toBottomOf="parent"
                                                                           tools:srcCompat="@android:drawable/ic_input_add"
                                                                           app:layout_constraintEnd_toEndOf="parent"
                                                                           android:id="@+id/fab"
                                                                           android:layout_marginEnd="8dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.drawerlayout.widget.DrawerLayout>


