<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProfileActivity"
        android:background="@drawable/bg1" android:id="@+id/z">

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            app:layout_constraintGuide_begin="23dp"
            android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline2"
            app:layout_constraintGuide_begin="388dp"
            android:orientation="vertical"/>
    <View
            android:layout_width="365dp"
            android:layout_height="165dp" android:id="@+id/view"
            android:background="@drawable/edit_round2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="108dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="119dp"
            android:layout_height="110dp"
            android:src="@drawable/robert"
            android:id="@+id/circleImageView2"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/view" app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline2" android:layout_marginEnd="8dp"/>

    <TextView
            android:text="@string/Username"
            android:layout_width="152dp"
            android:layout_height="31dp"
            android:id="@+id/textView8"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/circleImageView2"
            app:layout_constraintStart_toStartOf="@+id/circleImageView2"
            app:layout_constraintEnd_toEndOf="@+id/circleImageView2"/>
    <TextView
            android:text="@string/Signature"
            android:textColor="#fff"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_width="151dp"
            android:layout_height="26dp"
            android:id="@+id/textView9"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:layout_constraintStart_toStartOf="@+id/textView8" app:layout_constraintEnd_toEndOf="@+id/textView8"/>
    <TextView
            android:text="@string/Info"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:id="@+id/textView6" android:textSize="24sp"
            android:textColor="@color/design_default_color_on_secondary" android:textStyle="bold"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/view"
    />
    <View
            android:layout_width="718dp"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/view2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" android:visibility="visible" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.566" app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:layout_marginTop="16dp" android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toTopOf="@+id/textView10"/>
    <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:contentDescription="@string/mail_image"
            app:srcCompat="@drawable/ic_mail_black_24dp"
            android:id="@+id/imageView5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/textView10"
            android:layout_marginEnd="8dp" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/textView11" app:layout_constraintHorizontal_bias="0.533"/>
    <TextView
            android:text="@string/useremail"
            android:layout_width="299dp"
            android:layout_height="35dp"
            android:id="@+id/textView10"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toStartOf="@+id/guideline2" android:layout_marginEnd="8dp"
            android:textColor="@color/design_default_color_on_secondary" android:textSize="18sp"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/textView12"/>
    <TextView
            android:layout_width="99dp"
            android:layout_height="35dp"
            android:id="@+id/textView11" android:text="@string/profession"
            android:textSize="18sp"
            android:layout_marginBottom="20dp" app:layout_constraintBottom_toTopOf="@+id/textView13"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/textView12"
            app:layout_constraintHorizontal_bias="0.882" android:textStyle="bold"/>
    <TextView
            android:text="@string/profession_value"
            android:layout_width="232dp"
            android:layout_height="35dp"
            android:id="@+id/textView12" android:textSize="18sp"
            android:layout_marginEnd="24dp" app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:layout_marginBottom="20dp" app:layout_constraintBottom_toTopOf="@+id/textView14"/>
    <TextView
            android:text="@string/Company"
            android:layout_width="99dp"
            android:layout_height="35dp"
            android:id="@+id/textView13"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintEnd_toStartOf="@+id/textView14" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:textStyle="bold" android:textSize="18sp"
            android:layout_marginBottom="20dp" app:layout_constraintBottom_toTopOf="@+id/textView17"/>
    <TextView
            android:text="@string/Company_value"
            android:layout_width="232dp"
            android:layout_height="35dp"
            android:id="@+id/textView14"
            app:layout_constraintEnd_toStartOf="@+id/guideline2" android:layout_marginEnd="24dp"
            android:textSize="18sp" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/textView18"/>
    <TextView
            android:text="@string/Phone"
            android:layout_width="99dp"
            android:layout_height="35dp"
            android:id="@+id/textView17" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" app:layout_constraintEnd_toStartOf="@+id/textView18"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0" android:textSize="18sp"
            android:layout_marginBottom="78dp" app:layout_constraintBottom_toBottomOf="parent"
            android:textStyle="bold"/>
    <TextView
            android:text="@string/Phone_value"
            android:layout_width="232dp"
            android:layout_height="35dp"
            android:id="@+id/textView18" android:textSize="18sp" app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="78dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
