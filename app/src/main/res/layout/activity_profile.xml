<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".ProfileActivity"
        android:background="@drawable/bg1" android:id="@+id/z">

    <View
            android:layout_width="309dp"
            android:layout_height="131dp" android:id="@+id/view"
            android:background="@drawable/edit_round2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/textView6" app:layout_constraintVertical_bias="1.0"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="115dp"
            android:layout_height="92dp"
            android:src="@drawable/robert"
            android:id="@+id/circleImageView2"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/view" app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

    <TextView
            android:text="@string/Username"
            android:layout_width="152dp"
            android:layout_height="31dp"
            android:id="@+id/textView8"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/circleImageView2"
            app:layout_constraintEnd_toEndOf="@+id/circleImageView2"
            app:layout_constraintStart_toStartOf="@+id/circleImageView2"/>
    <TextView
            android:text="@string/Signature"
            android:textColor="#fff"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_width="151dp"
            android:layout_height="26dp"
            android:id="@+id/textView9"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:layout_constraintEnd_toEndOf="@+id/textView8" app:layout_constraintStart_toStartOf="@+id/textView8"/>
    <TextView
            android:text="@string/Info"
            android:layout_width="366dp"
            android:layout_height="31dp"
            android:id="@+id/textView6" android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/view2" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:textColor="@color/design_default_color_on_secondary"/>
    <View
            android:layout_width="718dp"
            android:layout_height="7dp"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/view2"
            android:visibility="visible"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/textView10" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/mail_image"
            app:srcCompat="@drawable/ic_mail_black_24dp"
            android:id="@+id/imageView5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/textView10"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/textView11"/>
    <TextView
            android:text="@string/useremail"
            android:layout_width="299dp"
            android:layout_height="35dp"
            android:id="@+id/textView10"
            android:gravity="bottom"
            android:textColor="@color/design_default_color_on_secondary" android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/imageView5" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/textView12"/>
    <TextView
            android:layout_width="99dp"
            android:layout_height="35dp"
            android:id="@+id/textView11" android:text="@string/profession"
            android:textSize="18sp"
            android:textStyle="bold" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/textView12"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/textView13"/>
    <TextView
            android:text="@string/profession_value"
            android:layout_width="232dp"
            android:layout_height="35dp"
            android:id="@+id/textView12" android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/textView11" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/textView14"
            android:textColor="@color/design_default_color_on_secondary"/>
    <TextView
            android:text="@string/Company"
            android:layout_width="99dp"
            android:layout_height="35dp"
            android:id="@+id/textView13"
            android:textStyle="bold" android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/textView14"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/textView17"/>
    <TextView
            android:text="@string/Company_value"
            android:layout_width="232dp"
            android:layout_height="35dp"
            android:id="@+id/textView14"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/textView13" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/textView18"
            android:textColor="@color/design_default_color_on_secondary"/>
    <TextView
            android:text="@string/Phone"
            android:layout_width="99dp"
            android:layout_height="35dp"
            android:id="@+id/textView17"
            android:textSize="18sp"
            android:textStyle="bold" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/textView18"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="80dp"/>
    <TextView
            android:text="@string/Phone_value"
            android:layout_width="232dp"
            android:layout_height="35dp"
            android:id="@+id/textView18" android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/textView17" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/design_default_color_on_secondary"/>

</androidx.constraintlayout.widget.ConstraintLayout>
