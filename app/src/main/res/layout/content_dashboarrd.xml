<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dashid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".Dashboarrd">


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginLeft="@dimen/dp10"
                  android:layout_marginRight="@dimen/dp10"
                  android:layout_marginBottom="@dimen/dp10"
                  android:layout_marginTop="@dimen/dp30"
                  app:layout_constraintTop_toTopOf="parent"
                  android:gravity="center"
                  app:layout_constraintStart_toStartOf="parent"
                  android:id="@+id/linearLayout2"
    >
        <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingLeft="@dimen/dp15"
        >
            <RelativeLayout android:layout_width="@dimen/dp150"
                            android:layout_height="@dimen/dp130"
                            android:background="@drawable/cardborder"
                            android:layout_marginEnd="@dimen/dp10"
                            android:elevation="@dimen/dp0"
                            android:layout_marginBottom="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp10"
                            android:layout_marginLeft="@dimen/dp0"
            >
                <TextView android:layout_width="@dimen/dp80"
                          android:layout_height="@dimen/dp80"
                          android:layout_marginRight="@dimen/dp50"
                          android:layout_marginLeft="@dimen/dp50"
                          android:layout_marginTop="@dimen/dp10"
                          android:id="@+id/awatingsigntv"
                          android:textSize="@dimen/sp50"
                          android:text="@string/awsdata"
                          android:textAlignment="center"
                          android:textColor="@color/textcolor3"
                          android:textStyle="bold"

                />
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_below="@+id/awatingsigntv"
                          android:layout_centerHorizontal="true"
                          android:textSize="@dimen/sp20"
                          android:text="@string/awatingsign"
                          android:layout_marginStart="@dimen/dp5"
                          android:layout_marginTop="@dimen/dp5"
                          android:layout_marginEnd="@dimen/dp5" android:layout_marginBottom="@dimen/dp5"
                          android:id="@+id/AwatingSign21"
                          android:textColor="@color/textcolor3"
                />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingRight="@dimen/dp10"
        >
            <RelativeLayout android:layout_width="@dimen/dp150"
                            android:layout_height="@dimen/dp130"
                            android:background="@drawable/cardborder"
                            android:layout_marginLeft="@dimen/dp10"
                            android:layout_marginBottom="@dimen/dp10"
                            android:elevation="@dimen/dp0"
                            android:layout_marginTop="@dimen/dp10"
            >
                <TextView android:layout_width="@dimen/dp80"
                          android:layout_height="@dimen/dp80"
                          android:layout_marginRight="@dimen/dp50"
                          android:layout_marginLeft="@dimen/dp50"
                          android:layout_marginTop="@dimen/dp10"
                          android:id="@+id/awatingotherstv"
                          android:textSize="@dimen/sp50"
                          android:text="@string/awsdata"
                          android:textStyle="bold"
                          android:textAlignment="center"
                          android:textColor="@color/textcolor3"
                />
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_below="@+id/awatingotherstv"
                          android:layout_centerHorizontal="true"
                          android:text="@string/awatingothers"
                          android:layout_marginStart="@dimen/dp5"
                          android:textColor="@color/textcolor3"
                          android:layout_marginTop="@dimen/dp5"
                          android:layout_marginRight="@dimen/dp5"
                          android:layout_marginLeft="@dimen/dp5"
                          android:textSize="@dimen/sp20"
                          android:layout_marginEnd="@dimen/dp5" android:layout_marginBottom="@dimen/dp5"
                          android:id="@+id/AwatingSign222"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="@dimen/dp0"
                  android:layout_marginBottom="@dimen/dp0"
                  android:gravity="center"
                  android:layout_margin="@dimen/dp10"
                  app:layout_constraintStart_toStartOf="parent"
                  android:id="@+id/linearLayout"
                  app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintHorizontal_bias="1.0">
        <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingLeft="@dimen/dp15"


        >
            <RelativeLayout android:layout_width="@dimen/dp150"
                            android:layout_height="@dimen/dp130"
                            android:background="@drawable/cardborder"
                            android:elevation="@dimen/dp0"
                            android:layout_marginRight="@dimen/dp10"
                            android:layout_marginBottom="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp10"
                            android:layout_marginLeft="@dimen/dp0">
                <TextView android:layout_width="@dimen/dp80"
                          android:layout_height="@dimen/dp80"
                          android:layout_marginRight="@dimen/dp50"
                          android:layout_marginLeft="@dimen/dp50"
                          android:layout_marginTop="@dimen/dp10"
                          android:id="@+id/completedtv"
                          android:textSize="@dimen/sp50"
                          android:text="@string/awsdata"
                          android:textAlignment="center"
                          android:textStyle="bold"
                          android:textColor="@color/textcolor3"
                />
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_below="@+id/completedtv"
                          android:layout_centerHorizontal="true"
                          android:text="@string/completed"
                          android:layout_marginStart="@dimen/dp5"
                          android:layout_marginLeft="@dimen/dp5"
                          android:layout_marginRight="@dimen/dp5"
                          android:textColor="@color/textcolor3"
                          android:layout_marginTop="@dimen/dp5"
                          android:textSize="@dimen/sp20"
                          android:layout_marginEnd="@dimen/dp5" android:layout_marginBottom="@dimen/dp5"
                          android:id="@+id/AwatingSign"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingRight="@dimen/dp10"

        >
            <RelativeLayout android:layout_width="@dimen/dp150"
                            android:layout_height="@dimen/dp130"
                            android:background="@drawable/cardborder"
                            android:layout_marginLeft="@dimen/dp10"
                            android:layout_marginBottom="@dimen/dp10"
                            android:elevation="@dimen/dp0"
                            android:layout_marginTop="@dimen/dp10"
            >
                <TextView android:layout_width="@dimen/dp80"
                          android:layout_height="@dimen/dp80"
                          android:layout_marginRight="@dimen/dp50"
                          android:layout_marginLeft="@dimen/dp50"
                          android:layout_marginTop="@dimen/dp10"
                          android:id="@+id/duesoontv"
                          android:textSize="@dimen/sp50"
                          android:text="@string/awsdata"
                          android:textStyle="bold"
                          android:textAlignment="center"
                          android:textColor="@color/textcolor3"
                />
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_below="@+id/duesoontv"
                          android:layout_centerHorizontal="true"
                          android:text="@string/signingdue"
                          android:layout_marginStart="@dimen/dp5"
                          android:textColor="@color/textcolor3"
                          android:layout_marginTop="@dimen/dp5"
                          android:textSize="@dimen/sp20"
                          android:layout_marginEnd="@dimen/dp5" android:layout_marginBottom="@dimen/dp5"
                          android:id="@+id/AwatingSign2"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <Button
            android:text="@string/addsign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp30"
            app:layout_goneMarginTop="@dimen/dp10"
            android:textAllCaps="false"
            android:id="@+id/addsign"
            android:background="@drawable/cardborder2"
            android:padding="@dimen/dp20"
            android:textSize="@dimen/sp20"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:layout_marginLeft="@dimen/dp50"
                                       android:layout_marginRight="@dimen/dp50"
                                       android:id="@+id/uploadcv"

                                       app:layout_goneMarginTop="@dimen/dp20"
                                       app:layout_constraintTop_toBottomOf="@+id/addsign"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       android:layout_marginTop="@dimen/dp20"
                                       android:padding="@dimen/dp5"
    >

        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:background="@drawable/cardborder2">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:src="@drawable/ic_file_upload"
                       android:id="@+id/cvimage"
                       android:padding="@dimen/dp10"
                       android:layout_marginTop="@dimen/dp5"

                       android:layout_margin="@dimen/dp20"
            />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/upload"
                      android:id="@+id/cardTextView1"
                      android:padding="@dimen/dp10"
                      android:textAlignment="center"
                      android:textColor="@color/textcolor"
                      android:layout_marginStart="@dimen/dp80"
                      android:layout_marginEnd="@dimen/dp20"
                      android:layout_marginTop="@dimen/dp20"
                      android:layout_marginBottom="@dimen/dp20"
                      android:textSize="@dimen/sp20"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>