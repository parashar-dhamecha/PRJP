<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
android:layout_margin="@dimen/dp50"
        android:padding="@dimen/dp20"
        android:background="@color/design_default_color_surface"
        android:layout_gravity="center"
>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:text="X"
    android:layout_gravity="right"
    android:layout_margin="@dimen/dp5"
              android:id="@+id/close_tvid"
    android:textSize="@dimen/sp20"/>
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/dp10"
              android:layout_marginTop="@dimen/dp10"
              android:textAlignment="center"
              android:text="@string/addsign"
              android:padding="@dimen/dp15"
              android:layout_gravity="center"
              android:background="@color/colorPrimary"
              android:textColor="@color/textcolor3"
              android:textSize="@dimen/sp20"
    />

    <Button
            android:height="@dimen/dp60"
            android:width="@dimen/dp150"
            android:layout_marginTop="@dimen/dp50"
            android:id="@+id/draw_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/drawsig"
            android:background="@color/textcolor4"
            android:textColor="@color/textcolor"
            android:layout_gravity="center"

    />
    <Button
            android:height="@dimen/dp60"
            android:width="@dimen/dp150"
            android:layout_marginTop="@dimen/dp20"
            android:id="@+id/photobutton"
            android:background="@color/textcolor4"
            android:textColor="@color/textcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/takepic"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp20"
    />
    <Button
            android:height="@dimen/dp60"
            android:width="@dimen/dp150"
            android:id="@+id/typebutton"
            android:background="@color/textcolor4"
            android:textColor="@color/textcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/type"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp30"
    />
</LinearLayout>

