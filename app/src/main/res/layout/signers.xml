<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvshort_name"
            android:textColor="@color/white"
            android:text="PG"
            android:gravity="center"
            android:background="@drawable/round"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
    <TextView
            android:text="@string/contact_name"
            android:layout_width="0dp"
            android:textColor="@color/textcolor"
            android:layout_height="wrap_content"
            android:id="@+id/tvSigner_name"
            app:layout_constraintStart_toEndOf="@+id/tvshort_name"
            android:layout_marginStart="16dp" android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
    />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textAllCaps="false"
            android:textColor="@color/slate_black"
            android:textAlignment="center"
            android:background="@drawable/mybutton"
            android:id="@+id/btnSigner"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
    />
    <View
            android:id="@+id/divider14"
            android:layout_width="395dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>