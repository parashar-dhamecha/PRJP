<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Type">

    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:inputType="textPersonName"
            android:hint="@string/name"
            android:layout_marginEnd="@dimen/dp100"
            android:layout_marginStart="@dimen/dp30"
            android:ems="10"
            android:id="@+id/edfonts"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.23" android:layout_marginTop="72dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <ScrollView android:layout_width="match_parent"
                android:layout_height="@dimen/dp200" android:id="@+id/idscrollview"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginEnd="@dimen/dp100"
                android:layout_marginStart="@dimen/dp30"
                android:background="@color/design_default_color_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edfonts"
                tools:ignore="ScrollViewCount">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/scrolltv1"
                      android:layout_marginTop="@dimen/dp10"
                      android:padding="@dimen/dp10"
                      android:layout_marginLeft="@dimen/dp5"
                      android:layout_marginRight="@dimen/dp5"
            />
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/scrolltv2"
                      android:padding="@dimen/dp10"
                      android:layout_marginTop="@dimen/dp10"
                      android:layout_marginLeft="@dimen/dp5"
                      android:layout_marginRight="@dimen/dp5"
            />
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/scrolltv3"
                      android:padding="@dimen/dp10"
                      android:layout_marginTop="@dimen/dp10"
                      android:layout_marginLeft="@dimen/dp5"
                      android:layout_marginRight="@dimen/dp5"
            />
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/scrolltv4"
                      android:layout_marginTop="@dimen/dp10"
                      android:layout_marginLeft="@dimen/dp5"
                      android:layout_marginRight="@dimen/dp5"
                      android:padding="@dimen/dp10"
            />
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/scrolltv5"
                      android:layout_marginTop="@dimen/dp10"
                      android:layout_marginLeft="@dimen/dp5"
                      android:padding="@dimen/dp10"
                      android:layout_marginRight="@dimen/dp5"
            />
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/scrolltv6"
                      android:layout_marginTop="@dimen/dp10"
                      android:layout_marginLeft="@dimen/dp5"
                      android:layout_marginRight="@dimen/dp5"
                      android:padding="@dimen/dp10"
            />
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/scrolltv7"
                      android:layout_marginTop="@dimen/dp10"
                      android:layout_marginLeft="@dimen/dp5"
                      android:padding="@dimen/dp10"
                      android:layout_marginRight="@dimen/dp5"
            />
        </LinearLayout>
    </ScrollView>
    <TextView
            android:text="@string/signature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/finalsigntv" android:layout_marginTop="@dimen/dp40"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp10"
            android:paddingTop="@dimen/dp20"
            android:paddingBottom="@dimen/dp40"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:textSize="@dimen/sp34"
            android:textColor="@color/textcolor"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/idscrollview" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/savebutton"
            android:layout_margin="@dimen/dp20"
            android:id="@+id/typesavebutton"
            android:layout_marginTop="8dp"
            android:padding="@dimen/dp20"
            android:background="@drawable/edit_round2"
            app:layout_constraintTop_toBottomOf="@+id/finalsigntv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>