<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
            android:layout_width="386dp"
            android:layout_height="63dp"
            android:background="@drawable/edit_round3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="1.0">


        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:padding="@dimen/dp5"
                    android:layout_margin="@dimen/dp5"
                    tools:srcCompat="@tools:sample/avatars"
                    android:id="@+id/pro" android:layout_alignParentStart="true" android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true" android:layout_marginBottom="0dp"
                    android:layout_marginTop="0dp"
            />

            <TextView android:layout_width="104dp" android:layout_height="34dp"
                      android:id="@+id/name"
                      android:text="@string/contact_name"
                      android:layout_toRightOf="@id/pro"
                      android:paddingLeft="@dimen/dp5"
                      android:textSize="25dp" android:layout_alignParentBottom="true"
                      android:layout_marginBottom="12dp"
                      android:layout_marginLeft="37dp"
                      android:layout_toStartOf="@+id/del"
                      android:layout_marginEnd="77dp"
                      android:layout_toEndOf="@+id/pro"
                      android:layout_marginStart="37dp" android:layout_marginTop="17dp"
                      android:layout_alignParentTop="true"/>

            <com.google.android.material.checkbox.MaterialCheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:id="@+id/checkbox"
                    android:layout_alignParentTop="true" android:layout_marginTop="9dp"
                    android:layout_alignParentEnd="true" android:layout_marginEnd="12dp"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>


