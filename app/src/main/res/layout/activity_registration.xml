<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".Registration">

        <com.hbb20.CountryCodePicker
                android:gravity="bottom"
                android:id="@+id/ccp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:ccp_defaultLanguage="ENGLISH"
                app:ccp_contentColor="@color/textcolor"
                app:ccp_arrowColor="@color/slate_black"
                app:ccp_textSize="14sp"
                app:ccp_arrowSize="14dp"
                app:ccp_customMasterCountries="ALL"
                app:ccp_countryPreference="IN,US"
                app:ccp_textGravity="RIGHT"
                app:ccp_showNameCode="false"
                app:ccp_showFlag="true"
                app:ccp_showFullName="false"
                app:ccp_clickable="true"
                app:ccp_showPhoneCode="true"
                app:ccp_autoDetectCountry="true"
                app:ccp_countryAutoDetectionPref="SIM_ONLY"
                app:ccp_autoDetectLanguage="true"
                app:ccp_rememberLastSelection="true"
                app:ccp_selectionMemoryTag="signupCCP"
                app:ccp_showArrow="true"
                app:ccp_hintExampleNumber="true"
                app:ccp_hintExampleNumberType="FIXED_LINE"
                app:ccpDialog_keyboardAutoPopup="false"
                app:ccpDialog_allowSearch="true"
                app:ccpDialog_showFastScroller="true"
                app:ccpDialog_backgroundColor="@color/textcolor3"
                app:ccpDialog_searchEditTextTint="@color/slate_black"
                app:ccpDialog_textColor="#000000"
                app:ccpDialog_showCloseIcon="true"
                app:ccpDialog_showFlag="true"
                app:ccpDialog_showTitle="true"
                app:ccpDialog_initialScrollToSelection="true"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout26"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toTopOf="@id/btregister"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="32dp"/>



        <TextView
                android:text="@string/Register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp24"
                android:id="@+id/textView2"
                android:textColor="@color/design_default_color_on_secondary"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                app:errorEnabled="true"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/MyHintText"
                android:layout_marginEnd="8dp"
                app:errorTextAppearance="@style/WelcomeErrorAppearance"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                android:id="@+id/textInputLayout17">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:theme="@style/MyEditText"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_marginBottom="@dimen/dp5"
                    android:ems="10"
                    android:id="@+id/etFirstName"
                    android:hint="@string/fname"
                    android:textSize="14sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:errorTextAppearance="@style/WelcomeErrorAppearance"
                app:hintTextAppearance="@style/MyHintText"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout17"
                android:id="@+id/textInputLayout18">


            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:theme="@style/MyEditText"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_marginBottom="@dimen/dp5"
                    android:ems="10"
                    android:id="@+id/etLastName"
                    android:hint="@string/lname"
                    android:textSize="14sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                app:hintTextAppearance="@style/MyHintText"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:errorTextAppearance="@style/WelcomeErrorAppearance"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout18"
                android:id="@+id/textInputLayout19">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:theme="@style/MyEditText"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_marginBottom="@dimen/dp5"
                    android:ems="10"
                    android:id="@+id/etEmail"
                    android:hint="@string/EmailId"
                    android:textSize="14sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/MyHintText"
                app:errorTextAppearance="@style/WelcomeErrorAppearance"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout22"
                android:id="@+id/textInputLayout24"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_marginBottom="@dimen/dp5"
                    android:theme="@style/MyEditText"
                    android:hint="@string/Job_Title"
                    android:id="@+id/etJobTitle" android:textSize="14sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:errorTextAppearance="@style/WelcomeErrorAppearance"
                app:hintTextAppearance="@style/MyHintText"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout24"
                android:id="@+id/textInputLayout26"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_marginBottom="@dimen/dp5"
                    android:theme="@style/MyEditText"
                    android:hint="@string/company_name"
                    android:id="@+id/etCompanyName" android:textSize="14sp"/>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/MyHintText"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ccp"
                app:errorTextAppearance="@style/WelcomeErrorAppearance"
                android:id="@+id/textInputLayout20"
                app:layout_constraintTop_toBottomOf="@id/textInputLayout26"
                android:layout_marginTop="8dp">


            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:layout_marginEnd="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_marginBottom="@dimen/dp5"
                    android:theme="@style/MyEditText"
                    android:ems="10"
                    android:id="@+id/etMobileNo"
                    android:hint="@string/phone"
                    android:textSize="14sp"/>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/MyHintText"
                android:layout_marginEnd="8dp"
                app:errorTextAppearance="@style/WelcomeErrorAppearance"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:passwordToggleEnabled="true"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout19"
                android:id="@+id/textInputLayout21" android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:theme="@style/MyEditText"
                    android:ems="10"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_marginBottom="@dimen/dp5"
                    android:id="@+id/etPassword"
                    android:hint="@string/passwd"
                    android:textSize="14sp"/>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:hintTextAppearance="@style/MyHintText"
                app:layout_constraintEnd_toEndOf="parent"
                app:passwordToggleEnabled="true"
                app:errorTextAppearance="@style/WelcomeErrorAppearance"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:id="@+id/textInputLayout22" app:layout_constraintTop_toBottomOf="@+id/textInputLayout21">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:theme="@style/MyEditText"
                    android:ems="10"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_marginBottom="@dimen/dp5"
                    android:id="@+id/etConfirmPassword"
                    android:hint="@string/cpasswd"
                    android:textSize="14sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
                android:text="@string/get_started"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:focusable="true"
                android:clickable="true"
                android:background="@drawable/edit_round2"
                android:id="@+id/btregister"
                android:textAllCaps="false"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp"
                android:textSize="18sp"
                android:theme="@style/AccentButton"
                android:textColor="@color/textcolor"
                tools:ignore="UnusedAttribute"
                style="@style/Widget.AppCompat.Button.Colored"
                app:layout_constraintTop_toBottomOf="@id/textInputLayout20"
                android:layout_marginTop="16dp"/>

        <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:id="@+id/view4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@id/btregister"
                app:layout_constraintBottom_toTopOf="@+id/loginlink" android:layout_marginTop="16dp"/>
        <TextView
                android:text="@string/AlreadyRegister"
                android:layout_width="0dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:id="@+id/loginlink"
                android:textColor="@color/textcolor"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp"
                app:layout_constraintTop_toBottomOf="@id/view4"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp" android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>