<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity" android:id="@+id/constLayout">

    <EditText
            android:layout_width="@dimen/layout_width"
            android:layout_height="@dimen/layout_height"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/UsernameEmail"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:hint="@string/username" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.493"
            android:layout_marginTop="84dp" app:layout_constraintTop_toBottomOf="@+id/imageView"/>
            tools:layout_editor_absoluteY="159dp" tools:ignore="MissingConstraints"/>
    <EditText
            android:layout_width="@dimen/layout_width"
            android:layout_height="@dimen/layout_height"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/UsernameEmail" app:layout_constraintHorizontal_bias="0.493"
            android:hint="@string/pass"/>
    <Button
            android:layout_width="146dp"
            android:layout_height="66dp"
            android:background="@color/colorPrimary"
            android:id="@+id/Login_Button" tools:text="@string/LoginButton"
            android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="@+id/editText3"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:textColor="@color/textcolor"
            android:textSize="24sp" app:layout_constraintHorizontal_bias="0.497"/>
    <TextView
            android:text="@string/FORGOTPASS"
            android:layout_width="184dp"
            android:layout_height="35dp"
            android:id="@+id/textView" android:textSize="@dimen/ForgotPassword"
            android:textColor="@color/colorAccent" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/editText3" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.876"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/Login_Button"
            app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:layout_width="358dp"
            android:layout_height="63dp" app:srcCompat="@drawable/cygnaturelogo"
            android:id="@+id/imageView" android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.489"/>
    <Button
            android:text="@string/SignUpButton"
            android:layout_width="146dp"
            android:layout_height="66dp"
            android:id="@+id/button3" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/Login_Button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.497" android:textSize="@dimen/LoginButton"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:layout_width="326dp"
            android:layout_height="45dp"
            android:id="@+id/tv" android:text="@string/LOgintv"
            android:textSize="@dimen/sp24" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.724"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/UsernameEmail"
            app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>