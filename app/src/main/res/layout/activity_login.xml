<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity" android:id="@+id/constLayout">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:background="@drawable/edit_round"
            android:paddingLeft="@dimen/dp20"
            android:ems="10"
            android:id="@+id/UsernameEmail"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:hint="@string/username" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            tools:ignore="MissingConstraints,TextFields"

            android:layout_marginTop="160dp" app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <Button
            android:layout_width="146dp"
            android:layout_height="66dp"
            android:background="@color/colorPrimary"
            android:id="@+id/Login_Button" android:text="@string/LoginButton"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:textColor="@color/textcolor"
            android:textSize="24sp" app:layout_constraintHorizontal_bias="0.497"
            android:layout_margin="@dimen/dp40"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <TextView
            android:text="@string/FORGOTPASS"
            android:layout_width="184dp"
            android:layout_height="37dp"
            android:id="@+id/textView" android:textSize="@dimen/ForgotPassword"
            android:textColor="@color/colorAccent"
            android:layout_marginStart="8dp"
            android:layout_margin="@dimen/dp30"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/edPassword" app:layout_constraintHorizontal_bias="0.712"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/edPassword"/>
    <ImageView
            android:layout_width="358dp"
            android:layout_height="63dp" app:srcCompat="@drawable/cygnaturelogo"
            android:id="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"

            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.216" android:layout_margin="@dimen/dp10"
            android:layout_marginTop="52dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="@string/SignUpButton"
            android:layout_width="146dp"
            android:layout_height="66dp"
            android:id="@+id/button3"
            android:textSize="@dimen/LoginButton"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/textcolor"
            android:layout_margin="@dimen/dp30"
            app:layout_constraintTop_toBottomOf="@+id/Login_Button" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/dp20"
            android:ems="10"
            android:layout_margin="@dimen/dp10"
            android:background="@drawable/edit_round"
            android:id="@+id/edPassword"
            app:layout_constraintStart_toStartOf="@+id/UsernameEmail" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/UsernameEmail" android:hint="Password"
            app:layout_constraintHorizontal_bias="0.315" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/UsernameEmail"/>
</androidx.constraintlayout.widget.ConstraintLayout>