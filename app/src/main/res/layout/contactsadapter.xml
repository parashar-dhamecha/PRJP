<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <com.dxdevil.pd.prjp.SwipeRevealLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            app:dragFromEdge="left"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent">

    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:orientation="horizontal">

            <ImageButton
                    android:id="@+id/delbutton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_delete_black_24dp"
                    android:text="Delete"/>

            <ImageButton
                    android:id="@+id/editbutton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_edit_black_24dp"
                    android:text="Edit"/>

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true">




    <androidx.cardview.widget.CardView
            android:layout_width="386dp"
            android:layout_height="58dp"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp">
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
        android:padding="10dp">

            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="@dimen/dp5"
                    tools:srcCompat="@tools:sample/avatars"
                    android:id="@+id/pro" android:layout_alignParentStart="true" android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true" android:layout_marginBottom="0dp"
                    android:layout_marginTop="0dp" android:layout_marginStart="0dp"/>

            <TextView android:layout_width="126dp" android:layout_height="60dp"
                      android:id="@+id/name"
                      android:text="@string/contact_name"
                      android:layout_toRightOf="@id/pro"
                      android:paddingLeft="@dimen/dp5"
                      android:layout_centerVertical="true"
                      android:textSize="25dp" android:layout_alignParentBottom="true"
                      android:layout_marginBottom="8dp" android:layout_marginLeft="31dp"
                      android:layout_toEndOf="@+id/pro" android:layout_marginStart="31dp"
                      android:layout_toStartOf="@+id/del" android:layout_marginEnd="61dp"/>
            <Button
                    android:layout_width="30dp"
                    android:layout_height="37dp"
                    android:background="@drawable/ic_delete_black_24dp"
                    android:id="@+id/del"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="2dp"
                    tools:ignore="UnknownId" android:layout_alignParentBottom="true"
                    android:layout_marginBottom="9dp" android:layout_alignParentEnd="true"
                    android:layout_marginEnd="67dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    </FrameLayout>

    </com.dxdevil.pd.prjp.SwipeRevealLayout>

</androidx.constraintlayout.widget.ConstraintLayout>