<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
            android:layout_width="386dp"
            android:layout_height="58dp"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp">
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="@dimen/dp5"
                    tools:srcCompat="@tools:sample/avatars"
                    android:id="@+id/pro" android:layout_alignParentStart="true" android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true" android:layout_marginBottom="0dp"
                    android:layout_marginTop="0dp" android:layout_marginStart="0dp"/>

            <TextView android:layout_width="104dp" android:layout_height="34dp"
                      android:id="@+id/name"
                      android:text="@string/contact_name"
                      android:layout_toRightOf="@id/pro"
                      android:paddingLeft="@dimen/dp5"
                      android:layout_centerVertical="true"
                      android:textSize="25dp" android:layout_alignParentBottom="true"
                      android:layout_marginBottom="15dp" android:layout_marginLeft="21dp"
                      android:layout_toEndOf="@+id/pro" android:layout_marginStart="21dp"
                      android:layout_toStartOf="@+id/del" android:layout_marginEnd="77dp"/>
            <Button
                    android:layout_width="29dp"
                    android:layout_height="34dp"
                    android:background="@drawable/ic_delete_black_24dp"
                    android:id="@+id/del"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    tools:ignore="UnknownId" android:layout_alignParentBottom="true"
                    android:layout_marginBottom="14dp" android:layout_alignParentEnd="true"
                    android:layout_marginEnd="39dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>