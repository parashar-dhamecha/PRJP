<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/scrollView2">

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            tools:context=".Uploadfile">

        <ImageView android:layout_width="@dimen/dp70"
                   android:layout_height="@dimen/dp70"
                   android:layout_marginTop="8dp"
                   android:layout_marginStart="@dimen/dp15"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   android:id="@+id/filetypeiv"/>
        <EditText android:layout_width="@dimen/dp215"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="@dimen/dp10"
                  android:textSize="@dimen/sp20"
                  android:textStyle="bold"
                  android:padding="@dimen/dp5"
                  android:layout_marginTop="@dimen/dp10"
                  android:text="file.txt"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="@dimen/dp10"
                  app:layout_constraintStart_toEndOf="@+id/filetypeiv"
                  app:layout_constraintHorizontal_bias="0.114"
                  app:layout_constraintTop_toTopOf="@+id/filetypeiv"
                  android:id="@+id/filenameet"/>
        <EditText
                android:layout_width="@dimen/dp215"
                android:layout_height="46dp"
                android:layout_marginTop="@dimen/dp5"
                android:lines="3"
                android:singleLine="false"
                android:ems="10"
                android:hint="@string/Description"
                android:textSize="@dimen/sp13"
                app:layout_constraintStart_toStartOf="@+id/filenameet"
                app:layout_constraintTop_toBottomOf="@+id/filenameet"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:id="@+id/filedescet"/>
        <androidx.recyclerview.widget.RecyclerView android:layout_width="match_parent"
                                                   android:layout_height="@dimen/dp200"
                                                   app:layout_constraintStart_toStartOf="parent"
                                                   android:layout_marginStart="8dp"
                                                   android:layout_marginTop="@dimen/dp8"
                                                   app:layout_constraintTop_toBottomOf="@+id/signertv"
                                                   android:layout_marginEnd="@dimen/dp10"
                                                   app:layout_constraintEnd_toEndOf="parent"
                                                   app:layout_constraintHorizontal_bias="0.0"
                                                   android:id="@+id/signersrv"
        />
        <androidx.recyclerview.widget.RecyclerView android:layout_width="match_parent"
                                                   android:layout_height="@dimen/dp200"
                                                   app:layout_constraintStart_toStartOf="parent"
                                                   app:layout_constraintEnd_toEndOf="parent"
                                                   android:id="@+id/observerrv"
                                                   android:layout_marginEnd="@dimen/dp10"
                                                   app:layout_constraintHorizontal_bias="0.0"
                                                   android:layout_marginStart="8dp"
                                                   android:layout_marginTop="@dimen/dp8"
                                                   app:layout_constraintTop_toBottomOf="@+id/textView4"
        />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  app:layout_constraintTop_toBottomOf="@+id/filedescet"
                  android:text="@string/selectsigners"
                  android:padding="@dimen/dp1"
                  android:textStyle="bold"
                  android:textSize="@dimen/sp20"
                  android:textColor="@color/textcolor2"
                  app:layout_constraintStart_toStartOf="@+id/signersrv"
                  android:id="@+id/signertv"
                  android:layout_marginStart="8dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/selectobservers"
                  android:padding="@dimen/dp1"
                  android:textStyle="bold"
                  android:textSize="@dimen/sp20"
                  android:textColor="@color/textcolor2"
                  app:layout_constraintTop_toBottomOf="@+id/signersrv"
                  app:layout_constraintStart_toStartOf="@+id/signersrv"
                  android:layout_marginTop="@dimen/dp10"
                  android:id="@+id/textView4"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/time"
                  android:padding="@dimen/dp1"
                  android:textStyle="bold"
                  android:layout_marginTop="@dimen/dp10"
                  android:textSize="@dimen/sp20"
                  android:textColor="@color/textcolor2"
                  app:layout_constraintTop_toBottomOf="@+id/observerrv"
                  app:layout_constraintStart_toStartOf="@+id/textView4" android:id="@+id/textView6"/>
        <EditText android:layout_width="120dp"
                  android:layout_height="wrap_content"
                  android:id="@+id/timeet"
                  android:layout_marginTop="8dp"
                  app:layout_constraintTop_toBottomOf="@+id/textView6"
                  app:layout_constraintStart_toStartOf="@+id/textView6"
                  android:layout_marginStart="0dp"/>
        <Button android:layout_width="45dp"
                android:layout_height="47dp"
                android:id="@+id/timebutton"
                android:paddingTop="@dimen/dp12"
                android:layout_marginLeft="@dimen/dp5"
                android:drawableTop="@drawable/ic_date"
                android:background="@drawable/edit_round3"
                app:layout_constraintTop_toTopOf="@+id/timeet"
                app:layout_constraintStart_toEndOf="@+id/timeet"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="30dp"
                  android:text="@string/expirey_start_date"
                  android:padding="@dimen/dp1"
                  android:textStyle="bold"
                  android:textSize="@dimen/sp20"
                  android:textColor="@color/textcolor2"
                  android:id="@+id/textView8"
                  android:layout_marginStart="@dimen/dp20"
                  app:layout_constraintTop_toTopOf="@+id/textView6"
                  android:layout_marginTop="4dp"
                  app:layout_constraintStart_toEndOf="@+id/timebutton"/>
        <EditText android:layout_width="120dp"
                  android:layout_height="wrap_content"
                  android:id="@+id/esdateet"
                  app:layout_constraintTop_toBottomOf="@+id/textView8"
                  android:layout_marginTop="8dp"
                  app:layout_constraintStart_toStartOf="@+id/textView8"/>
        <Button android:layout_width="45dp"
                android:layout_height="47dp"
                android:id="@+id/esdatebutton"
                android:paddingTop="@dimen/dp12"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginLeft="@dimen/dp5"
                android:drawableTop="@drawable/ic_date"
                android:background="@drawable/edit_round3"
                app:layout_constraintTop_toBottomOf="@+id/textView8"
                app:layout_constraintStart_toEndOf="@+id/esdateet"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/expirey_end_date"
                  android:padding="@dimen/dp1"
                  android:textStyle="bold"
                  android:layout_marginTop="@dimen/dp10"
                  android:textSize="@dimen/sp20"
                  android:textColor="@color/textcolor2"
                  android:id="@+id/textView9"
                  app:layout_constraintTop_toBottomOf="@+id/timeet" app:layout_constraintStart_toStartOf="@+id/timeet"/>
        <EditText android:layout_width="120dp"
                  android:layout_height="wrap_content"
                  android:id="@+id/eedateet"
                  android:layout_marginTop="@dimen/dp10"
                  app:layout_constraintTop_toBottomOf="@+id/textView9"
                  app:layout_constraintStart_toStartOf="@+id/textView9"/>
        <Button android:layout_width="45dp"
                android:layout_height="47dp"
                android:id="@+id/eedatebutton"
                android:paddingTop="@dimen/dp12"
                android:layout_marginStart="@dimen/dp5"
                android:drawableTop="@drawable/ic_date"
                android:background="@drawable/edit_round3"
                app:layout_constraintTop_toTopOf="@+id/eedateet" app:layout_constraintStart_toEndOf="@+id/eedateet"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/Signing_Due_date"
                  android:padding="@dimen/dp1"
                  android:textStyle="bold"
                  android:textSize="@dimen/sp20"
                  android:textColor="@color/textcolor2"
                  android:id="@+id/textView10"
                  app:layout_constraintStart_toStartOf="@+id/esdateet"
                  app:layout_constraintTop_toTopOf="@+id/textView9"/>
        <EditText android:layout_width="120dp"
                  android:layout_height="wrap_content"
                  android:id="@+id/signduedateet"
                  android:layout_marginTop="@dimen/dp10"
                  app:layout_constraintTop_toBottomOf="@+id/textView10"
                  app:layout_constraintStart_toStartOf="@+id/textView10"/>
        <Button android:layout_width="45dp"
                android:layout_height="47dp"
                android:id="@+id/signduedatebutton"
                android:paddingTop="@dimen/dp12"
                android:drawableTop="@drawable/ic_date"
                android:background="@drawable/edit_round3"
                app:layout_constraintTop_toTopOf="@+id/signduedateet"
                app:layout_constraintStart_toStartOf="@+id/esdatebutton"/>
        <RadioGroup android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp10"
                    android:paddingRight="@dimen/dp5"
                    app:layout_constraintStart_toStartOf="@+id/eedateet"
                    app:layout_constraintTop_toBottomOf="@+id/eedateet" android:id="@+id/radioGroup">
            <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                         android:text="@string/sequential"
                         android:textSize="@dimen/sp17"
                         android:textStyle="normal"
                         android:id="@+id/sequentialrb"
                         android:layout_marginLeft="@dimen/dp5"
                         android:layout_marginRight="@dimen/dp5"
            />

            <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                         android:text="@string/paralel"
                         android:textSize="@dimen/sp17"
                         android:textStyle="normal"
                         android:paddingEnd="@dimen/dp5"
                         android:layout_marginStart="@dimen/dp10"
                         android:layout_marginEnd="@dimen/dp5"
            />
        </RadioGroup>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/remindbefore"
                  android:padding="@dimen/dp1"
                  android:layout_marginTop="@dimen/dp10"
                  android:textStyle="italic"
                  android:textSize="@dimen/sp20"
                  android:textColor="@color/textcolor2"
                  android:layout_marginBottom="@dimen/dp30"
                  app:layout_constraintStart_toStartOf="@+id/radioGroup"
                  app:layout_constraintTop_toBottomOf="@+id/radioGroup" android:id="@+id/textView12"/>
        <EditText android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="@dimen/dp3"
                  android:hint="@string/days"
                  android:layout_marginStart="@dimen/dp5"
                  android:layout_marginBottom="@dimen/dp30"
                  android:id="@+id/reminddays"
                  app:layout_constraintTop_toTopOf="@+id/textView12"
                  app:layout_constraintStart_toEndOf="@+id/textView12"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>